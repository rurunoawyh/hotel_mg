<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hotel_mg.dao.GuestRoomDao">
    <resultMap id="guestRoomDOMap" type="GuestRoomDO">
        <id property="id" column="id" />
        <result property="roomType" column="room_type" />
        <result property="roomNum" column="room_num" />
        <result property="floorNum" column="floor_num" />
        <result property="device" column="room_device" />
        <result property="status" column="status" />
        <result property="privice" column="privice" />
        <result property="createDate" column="create_date" />
        <result property="warehouseCode" column="warehouse_code" />
        <result property="roomArea" column="room_area" />
        <result property="uint" column="uint" />
        <result property="roomDescribe" column="room_describe" />
        <result property="beginDate" column="begin_date" />
        <result property="endDate" column="end_date" />
    </resultMap>
    <sql id="key">
        <trim suffixOverrides=",">
            <if test="id!=null">
                id,
            </if>
            <if test="roomType!=null">
                room_type,
            </if>
            <if test="roomNum!=null">
                room_num,
            </if>
            <if test="floorNum!=null">
                floor_num,
            </if>
            <if test="device!=null">
                room_device,
            </if>
            <if test="status!=null">
                status,
            </if>
            <if test="privice!=null">
                privice,
            </if>
            <if test="createDate!=null">
                create_date,
            </if>
            <if test="warehouseCode!=null">
                warehouse_code,
            </if>
            <if test="roomArea!=null">
                room_area,
            </if>
            <if test="uint!=null">
                uint,
            </if>
            <if test="roomDescribe!=null">
                room_describe,
            </if>
            <if test="beginDate!=null">
                begin_date,
            </if>
        </trim>
    </sql>

    <sql id="value">
        <!-- 去掉最后一个, -->
        <trim suffixOverrides=",">
            <if test="id!=null">
                #{id},
            </if>
            <if test="roomType!=null">
                #{roomType},
            </if>
            <if test="roomNum!=null">
                #{roomNum},
            </if>
            <if test="floorNum!=null">
                #{floorNum},
            </if>
            <if test="device!=null">
                #{device},
            </if>
            <if test="status!=null">
                #{status},
            </if>
            <if test="privice!=null">
                #{privice},
            </if>
            <if test="createDate!=null">
                #{createDate},
            </if>
            <if test="warehouseCode!=null">
                #{warehouseCode},
            </if>
            <if test="roomArea!=null">
                #{roomArea},
            </if>
            <if test="uint!=null">
                #{uint},
            </if>o
            <if test="roomDescribe!=null">
                #{roomDescribe},
            </if>
            <if test="beginDate!=null">
                #{beginDate},
            </if>
            <if test="endDate!=null">
                #{endDate},
            </if>
        </trim>
    </sql>
    <insert id="saveGuestRoomDO" parameterType="GuestRoomDO">
        insert into guest_room(<include refid="key" />) values(<include refid="value" />)
    </insert>

    <select id="queryByRoomNum" resultMap="guestRoomDOMap">
        select *
        from guest_room
        <where>
        <if test="roomNum !=null">
            room_num =#{roomNum}
        </if>
        </where>
    </select>

    <select id=""></select>


</mapper>